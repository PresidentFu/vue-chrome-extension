{
    "manifest_version": 2,
    "name": "hiBookMark",
    "version": "0.0.3",
    "description": "书签管理",
    "browser_action":
    {
        "default_icon": "static/images/icon128.png",
        "default_popup": "popup.html"
    },
    "options_page": "index.html",
    "commands":
    {
        "_execute_browser_action":
        {
            "suggested_key":
            {
                "windows": "Ctrl+B",
                "mac": "Command+B",
                "chromeos": "Ctrl+B",
                "linux": "Ctrl+B"
            }
        }
    },
    "permissions": [
        "activeTab",
        "bookmarks",
        "tabs",
        "history",
        "<all_urls>"
    ]
}